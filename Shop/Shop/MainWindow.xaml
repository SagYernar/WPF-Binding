<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid Name="productsGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="Id" Width="25"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Name" Width="30*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Price}" Header="Price" Width="30*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=MadeIn}" Header="Made In" Width="30*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Time}" Header="Date" Width="50*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
